{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@engine/*": ["engine/*"]
    }
  },
  "include": [
    "engine/**/*",
    "main.ts",
    "index.html"
  ]
}
